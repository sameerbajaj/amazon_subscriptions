{
    "manifest_version": 3,
    "name": "Amazon Subscription Canceler",
    "version": "1.0.0",
    "description": "Easily view and cancel your Amazon Subscribe & Save subscriptions",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.amazon.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}